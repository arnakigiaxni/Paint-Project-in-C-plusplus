#include <vcl.h>
#pragma hdrstop

#include "Unit2.h"
#include "Unit1.h"   //δηλωση της πρωτης φορμας
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm2 *Form2;
//---------------------------------------------------------------------------
__fastcall TForm2::TForm2(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------

//συμβαν κατα το οποιο ο χρηστης παταει "ΝΑΙ" και κλεινει το προγραμμα
//κλεινοντας και τις δυο φορμες

void __fastcall TForm2::YesButtonClick(TObject *Sender)
{
  Form1->Close();
  Form2->Close();
}
//---------------------------------------------------------------------------

//συμβαν κατα το οποιο ο χρηστης παταει "ΟΧΙ" και επιστρεφουμε στην πρωτη φορμα
//κλεινοντας την δευτερη φορμα

void __fastcall TForm2::NoButtonClick(TObject *Sender)
{
   Form2->Close();
}
//---------------------------------------------------------------------------

